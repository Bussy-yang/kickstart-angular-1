{
  "name": "esp-angular-mvc",
  "description": "ESP Angular MVC Application Skeleton",
  "version": "4.5.0",
  "dependencies": {
    "esp-angular": "*"
  },
  "dirs": {
    "base": ".",
    "paks": "client/paks"
  },
  "precious": true,
  "esp": {
    "formats": {
      "date": "yyyy-MM-dd",
      "float": 2
    },
    "json": true,
    "server": {
      "database": "${DATABASE}://${NAME}.${DATABASE}"
    }
  },
  "generate": {
    "top": "angular-mvc",
    "scaffold": true,
    "clientModel": true,
    "clientController": true,
    "clientView": true,
    "controller": true,
    "migration": true,
    "view": false
  }
}