<h1><%= param("id") ? "Edit" : "Create" %> User</h1>

<% form(0, 0); %>
    <table border="0">
        <tr><td>Username</td><td><% input("name", 0); %></td></tr>
        <tr><td>Password</td><td><% text("password", sfmt("{value: %s, password: true}", params("password"))); %></td></tr>
    </table>

    <% button("commit", "OK", 0); %>
    <% buttonLink("Cancel", "@index", 0); %>
    <% if (params("id")) buttonLink("Delete", 0, "{method: 'DELETE', click: '@destroy'}"); %>
<% endform(); %>
