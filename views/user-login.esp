<% form(0, "{domid: 'login', click: '@login', modal: true}"); %>
    <h4>Please Login</h4>
    <table border="0">
        <tr><td><b>Username</b></td><td><% text("name", sfmt("{value: %s}", params("name"))); %></td></tr>
        <tr><td><b>Password</b></td><td><% text("password", sfmt("{value: %s, password: true}", params("password"))); %></td></tr>
    </table>
    <% button("commit", "OK", 0); %>
    <% buttonLink("Cancel", "@", 0); %>
<% endform(); %>
</div>
