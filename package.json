{
    "name": "kickstart",
    "title": "Kickstart",
    "description": "Kickstart for ESP",
    "version": "0.8.0",
    "keywords": [
        "esp"
    ],
    "dependencies": {
        "angular": ">=1.2.0",
        "angular-bootstrap": "0.7.0",
        "bootstrap": ">=3.0.0",
        "esp-angular": "*",
        "esp-angular-mvc": "*",
        "esp-best": "*",
        "esp-gui": "*",
        "esp-mgr": "*",
        "esp-server": "*",
        "font-awesome": "*",
        "html5shiv": "*",
        "less": ">=1.3.3",
        "me-dev": "~0.8",
        "more": "*",
        "respond": "*"
    },
    "client-scripts": [
        "paks/angular/angular.js",
        "paks/angular/angular-animate.js",
        "paks/angular/angular-route.js",
        "paks/angular-bootstrap/*.js",
        "paks/esp-angular/*.js",
        "app/main.js",
        "app/*/**.js*",
        "paks/esp-gui/*.js",
        "paks/html5shiv/html5shiv.js",
        "paks/less/less.js",
        "paks/respond/respond.js"
    ],
    "dirs": {
        "client": "client",
        "paks": "client/paks",
        "base": "."
    },
    "precious": true,
    "esp": {
        "mode": "release",
        "modes": {
            "debug": {
                "combined": false,
                "showErrors": true,
                "keepSource": true,
                "update": true,
                "login": {
                    "name": "",
                    "abilities": {
                        "edit": true,
                        "view": true
                    },
                    "single": false
                },
                "loginRequired": "",
                "server": {
                    "redirect": ""
                }
            },
            "release": {
                "combined": true,
                "compressed": true,
                "cache": 86400,
                "showErrors": false,
                "update": false,
                "keepSource": false,
                "login": {
                    "name": "",
                    "abilities": {
                        "edit": true,
                        "view": true
                    },
                    "single": false
                },
                "loginRequired": "/user/login",
                "server": {
                    "redirect": "secure"
                }
            }
        },
        "auth": "app",
        "formats": {
            "date": "yyyy-MM-dd",
            "float": 2,
            "int": 0
        },
        "json": true,
        "refresh": 1000,
        "serverPrefix": "/do",
        "xsrf": true,
        "server": {
            "database": "mdb://kickstart.mdb",
            "generate": {
                "appweb": "esp-server/appweb.conf",
                "migration": "esp-server/migration.c",
                "controller": "esp-server/controller.c",
                "controller-singleton": "esp-server/controller.c",
                "files": [
                    "esp-server/src/app.c"
                ],
                "clientModel": "esp-angular-mvc/model.js",
                "clientController": "esp-angular-mvc/controller.js",
                "clientList": "esp-angular-mvc/list.html",
                "clientEdit": "esp-angular-mvc/edit.html"
            }
        },
        "timeouts": {
            "session": 1800
        },
        "combined": false,
        "update": true
    },
    "ignore": [
        "doc",
        "start.bit"
    ]
}
