{
    "name": "kickstart",
    "title": "Kickstart",
    "description": "Kickstart for ESP",
    "version": "0.8.0",
    "keywords": [
        "esp"
    ],
    "dependencies": {
        "esp-mgr": "*",
        "me-dev": "~0.8",
    },
    "client-scripts": [
        "paks/angular/angular.js",
        "paks/angular/angular-animate.js",
        "paks/angular/angular-route.js",
        "paks/angular-bootstrap/*.js",
        "paks/esp-angular/*.js",
        "app/main.js",
        "app/*/**.js*",
        "paks/esp-gui/*.js",
        "paks/html5shiv/html5shiv.js",
        "paks/less/less.js",
        "paks/respond/respond.js"
    ],
    "dirs": {
        "client": "client",
        "paks": "paks",
        "jslib": "client/lib",
        "base": "."
    },
    "esp": {
        "auth": "app",
        "formats": {
            "date": "yyyy-MM-dd",
            "float": 2,
            "int": 0
        },
        "json": true,
        "mode": "debug",
        "modes": {
            "debug": {
                "combine": false,
                "content": {
                    "css": {
                        "combine": false,
                        "minify": false,
                        "compress": false
                    },
                    "html": {
                        "combine": false,
                        "minify": false,
                        "compress": false
                    },
                    "js": {
                        "combine": false,
                        "minify": false,
                        "compress": false
                    }
                },
                "login": {
                    "name": "",
                    "abilities": {
                        "edit": true,
                        "view": true
                    },
                    "single": false,
                    "required": ""
                },
                "server": {
                    "redirect": ""
                },
                "keepSource": true,
                "showErrors": true,
                "update": true,
                "combined": false
            },
            "release": {
                "cache": 86400,
                "combine": true,
                "compressed": true,
                "content": {
                    "css": {
                        "combine": true,
                        "minify": true,
                        "compress": true
                    },
                    "html": {
                        "combine": true,
                        "minify": true,
                        "compress": true
                    },
                    "js": {
                        "combine": true,
                        "minify": true,
                        "compress": true
                    }
                },
                "keepSource": false,
                "login": {
                    "name": "",
                    "abilities": {
                        "edit": true,
                        "view": true
                    },
                    "single": false,
                    "required": "/user/login"
                },
                "server": {
                    "redirect": "secure"
                },
                "showErrors": false,
                "update": false,
                "combined": true
            }
        },
        "refresh": 1000,
        "serverPrefix": "/do",
        "server": {
            "database": "mdb://kickstart.mdb",
            "generate": {
                "appweb": "esp-best/appweb.conf",
                "migration": "esp-server/migration.c",
                "controller": "esp-server/controller.c",
                "controller-singleton": "esp-server/controller.c",
                "clientModel": "esp-angular-mvc/model.js",
                "clientController": "esp-angular-mvc/controller.js",
                "clientList": "esp-angular-mvc/list.html",
                "clientEdit": "esp-angular-mvc/edit.html"
            }
        },
        "timeouts": {
            "session": 1800
        },
        "xsrf": true,
    },
    "ignore": [
        "doc",
        "start.bit"
    ]
}
