{
    "name": "kickstart",
    "title": "Kickstart",
    "description": "Kickstart for ESP",
    "version": "0.8.0",
    "keywords": [
        "esp"
    ],
    "dependencies": {
        "angular": "~1.2",
        "esp-best": "~5.0",
        "esp-mgr": "*",
        "me-dev": "~0.8"
    },
    "app": {
        "client": {
            "mappings": {
                "auth": "app.http.auth",
                "prefix": "app.http.prefix",
                "serverPrefix": "app.http.serverPrefix",
                "formats": "app.http.formats",
                "login": {
                    "name": "app.http.auth.login.name",
                    "url": "app.http.auth.require.login",
                    "url'": "app.http.auth.login.url"
                },
                "timeouts": {
                    "session": "app.http.timeouts.session",
                    "refresh": "app.http.timeouts.refresh"
                }
            },
            "scripts": [
                "lib/angular/angular.js",
                "lib/angular/angular-animate.js",
                "lib/angular/angular-route.js",
                "lib/angular-bootstrap/*.js",
                "lib/esp-angular/*.js",
                "app/main.js",
                "app/*/**.js*",
                "lib/esp-gui/*.js",
                "lib/html5shiv/html5shiv.js",
                "lib/less/less.js",
                "lib/respond/respond.js"
            ]
        },
        "esp": {
            "generate": {
                "appweb": "esp-best/appweb.conf",
                "migration": "esp-server/migration.c",
                "controller": "esp-server/controller.c",
                "controller-singleton": "esp-server/controller.c",
                "clientModel": "esp-angular-mvc/model.js",
                "clientController": "esp-angular-mvc/controller.js",
                "clientList": "esp-angular-mvc/list.html",
                "clientEdit": "esp-angular-mvc/edit.html",
                "module": "esp-mvc/src/app.c",
                "controllerSingleton": "esp-angular-mvc/generate/controller-singleton.c"
            }
        },
        "http": {
            "auth": {
                "type": "app"
            },
            "database": "mdb://kickstart.mdb",
            "formats": {
                "date": "yyyy-MM-dd",
                "float": 2,
                "int": 0,
                "response": "json"
            },
            "routes": "esp-angular-mvc",
            "server": {
                "listen": [
                    "127.0.0.1:4000"
                ]
            },
            "serverPrefix": "/do",
            "timeouts": {
                "refresh": 1000,
                "session": 1800
            },
            "xsrf": true,
            "content": {
                "stylesheets": "css"
            }
        },
        "json": true,
        "mode": "debug",
        "modes": {
            "debug": {
                "combine": false,
                "content": {
                    "css": {
                        "combine": false,
                        "minify": false,
                        "compress": false
                    },
                    "html": {
                        "combine": false,
                        "minify": false,
                        "compress": false
                    },
                    "js": {
                        "combine": false,
                        "minify": false,
                        "compress": false
                    }
                },
                "login": {
                    "name": "",
                    "abilities": {
                        "edit": true,
                        "view": true
                    },
                    "single": false,
                    "required": ""
                },
                "server": {
                    "redirect": ""
                },
                "keepSource": true,
                "showErrors": true,
                "update": true,
                "combined": false,
                "compile": "symbols",
                "esp": {
                    "compile": "symbols"
                },
                "http": {
                    "content": {
                        "keep": [
                            "c"
                        ],
                        "stylesheets": "less"
                    },
                    "showErrors": true,
                    "update": true,
                    "auth": {
                        "login": {
                            "name": "",
                            "abilities": [
                                "*"
                            ]
                        }
                    }
                }
            },
            "release": {
                "cache": 86400,
                "combine": true,
                "compressed": true,
                "content": {
                    "css": {
                        "combine": true,
                        "minify": true,
                        "compress": true
                    },
                    "html": {
                        "combine": true,
                        "minify": true,
                        "compress": true
                    },
                    "js": {
                        "combine": true,
                        "minify": true,
                        "compress": true
                    }
                },
                "keepSource": false,
                "login": {
                    "name": "",
                    "abilities": {
                        "edit": true,
                        "view": true
                    },
                    "single": false,
                    "required": "/user/login"
                },
                "server": {
                    "redirect": "secure"
                },
                "showErrors": false,
                "update": false,
                "combined": true,
                "compile": "optimized",
                "esp": {
                    "compile": "optimized"
                },
                "http": {
                    "showErrors": false,
                    "update": false,
                    "auth": {
                        "login": {
                            "url": ""
                        }
                    },
                    "cache": [
                        {
                            "lifespan": {
                                "client": "1day"
                            },
                            "extensions": [
                                "css",
                                "gif",
                                "ico",
                                "jpeg",
                                "jpg",
                                "js",
                                "html",
                                "less",
                                "png",
                                "pdf",
                                "txt"
                            ]
                        }
                    ],
                    "content": {
                        "combine": [
                            "c",
                            "css",
                            "html",
                            "js"
                        ],
                        "compress": [
                            "css",
                            "html",
                            "js",
                            "txt",
                            "xml"
                        ],
                        "minify": [
                            "css",
                            "html",
                            "js"
                        ],
                        "stylesheets": "css"
                    },
                    "redirect": [
                        {
                            "to": "https://"
                        }
                    ]
                }
            }
        },
        "server": {
            "database": "mdb://kickstart.mdb",
            "generate": {
                "appweb": "esp-best/appweb.conf",
                "migration": "esp-server/migration.c",
                "controller": "esp-server/controller.c",
                "controller-singleton": "esp-server/controller.c",
                "clientModel": "esp-angular-mvc/model.js",
                "clientController": "esp-angular-mvc/controller.js",
                "clientList": "esp-angular-mvc/list.html",
                "clientEdit": "esp-angular-mvc/edit.html",
                "module": "esp-mvc/generate/src/app.c"
            }
        }
    },
    "ignore": [
        "doc",
        "start.bit"
    ]
}
