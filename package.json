{
    "name": "kickstart",
    "title": "Kickstart",
    "description": "Kickstart for ESP",
    "version": "0.8.0",
    "dependencies": {
        "angular": ">=1.2.0",
        "angular-bootstrap": "0.7.0",
        "bootstrap": ">=3.0.0",
        "esp-angular": "*",
        "esp-angular-mvc": "*",
        "esp-best": "*",
        "esp-gui": "0.8.0",
        "esp-mgr": "0.8.0",
        "esp-server": "*",
        "font-awesome": "*",
        "html5shiv": "*",
        "less": ">=1.3.3",
        "more": "*",
        "respond": "*"
    },
    "client-scripts": [
        "paks/angular/angular.js",
        "paks/angular/angular-animate.js",
        "paks/angular/angular-route.js",
        "paks/angular-bootstrap/*.js",
        "paks/esp-angular/*.js",
        "paks/esp-gui/*.js"
    ],
    "dirs": {
        "client": "client",
        "paks": "client/paks",
        "base": "."
    },
    "precious": true,
    "esp": {
        "mode": "debug",
        "modes": {
            "debug": {
                "flat": false,
                "showErrors": true,
                "keepSource": true,
                "update": true,
                "login": {
                    "name": "",
                    "abilities": {
                        "edit": true,
                        "view": true
                    }
                }
            },
            "release": {
                "flat": true,
                "compressed": true,
                "cache": 86400,
                "showErrors": false,
                "update": false,
                "keepSource": false,
                "login": {
                    "name": "",
                    "abilities": {
                        "edit": true,
                        "view": true
                    }
                }
            }
        },
        "auth": "app",
        "formats": {
            "date": "yyyy-MM-dd",
            "float": 2,
            "int": 0
        },
        "json": true,
        "loginRequired": "",
        "refresh": 1000,
        "serverPrefix": "/do",
        "xsrf": true,
        "server": {
            "database": "${DATABASE}://${NAME}.${DATABASE}",
            "_redirect": "secure",
            "generate": {
                "top": "angular-mvc",
                "scaffold": true,
                "clientModel": true,
                "clientController": true,
                "clientView": true,
                "controller": true,
                "migration": true,
                "view": false
            }
        },
        "scripts": {
            "esp-mgr": [
                "*"
            ],
            "html5shiv": [
                "*"
            ],
            "less": [
                "*"
            ],
            "respond": [
                "*"
            ]
        }
    },
    "ignore": [
        "doc",
        "start.bit"
    ]
}
