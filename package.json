{
    "name": "kickstart",
    "title": "Kickstart",
    "description": "Kickstart Appweb / ESP Demonstration Application",
    "version": "0.8.1",
    "keywords": [
        "appweb",
        "esp"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/embedthis/kickstart.git"
    },
    "dependencies": {
        "esp-angular": "^5.3",
        "esp-mgr-skeleton": "^5.3"
    },
    "_FUTURE_directories": {
        "cache": "dist/cache",
        "dist": "dist/web",
        "db": "dist/db"
    },
    "pak": {
        "mode": "release",
        "import": true,
        "render": {
            "js": [
                "${TOP}/${CONTENTS}/main.js",
                "${TOP}/${CONTENTS}/**.js.ng",
                "${TOP}/${CONTENTS}/**.js"
            ]
        },
        "overrides": {
            "bootstrap": {
                "pak": {
                    "export": [
                        "less/**",
                        {
                            "from": "dist/fonts/**",
                            "trim": 1
                        }
                    ]
                }
            },
            "font-awesome": {
                "pak": {
                    "export": [
                        "less/**",
                        "fonts/**"
                    ]
                }
            }
        }
    }
}
