{
    "meta": {
        "url": "https://embedthis.com/appweb/demo/"
    },
    "control": {
        "post": [
            "ng-package",
            "compile-esp",
            "compress"
        ],
        "deploy": {
            "from": [
                "dist/**",
                "db/*.*",
                "!db/*.bak",
                "cache/*.dylib",
                "cache/*.so",
                "cache/*.dll",
                "cache/*.lib",
                "esp.json",
                "package.json"
            ],
            "to": "deploy",
            "flatten": false,
            "clean": true,
            "script": ""
        }
    },
    "services": {
        "clean-css": true
    },
    "debug": {
        "services": {
            "compress": false,
            "ng-compile-html": false,
            "ng-package": false,
            "render-js": {
                "usemin": false,
                "usemap": false
            }
        }
    },
    "release": {
        "services": {
            "compress": true,
            "minify-css": {
                "minify": true
            },
            "ng-compile-js": {
                "files": [
                    "contents/**.js",
                    "lib/esp*/**.js",
                    "lib/angular*/**.js"
                ]
            },
            "ng-package": true,
            "render-css": {
                "usemap": false,
                "usemin": true
            },
            "render-js": {
                "usemap": false
            }
        }
    }
}
