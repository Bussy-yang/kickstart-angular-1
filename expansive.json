{
    "meta": {
        "site": "https://embedthis.com/appweb/demo/"
    },
    "control": {
        "deploy": {
            "from": [
                "dist/**",
                "db/*.*",
                "!db/*.bak",
                "cache/*.dylib",
                "cache/*.so",
                "cache/*.dll",
                "cache/*.lib",
                "esp.json",
                "package.json"
            ],
            "to": "deploy",
            "flatten": false,
            "clean": true,
            "script": ""
        },
        "pipeline": {
            "post": [
                "angular-package",
                "esp",
                "gzip"
            ]
        },
        "render": {
            "js": [
                "main.js",
                "dash/Dash.js",
                "dash/DashControl.js",
                "demo/DemoControl.js",
                "event/Event.js",
                "event/EventControl.js",
                "home/HomeControl.js",
                "port/Port.js",
                "port/PortControl.js",
                "setting/Setting.js",
                "setting/SettingControl.js",
                "status/Status.js",
                "status/StatusControl.js",
                "table/Table.js",
                "table/TableControl.js",
                "user/User.js",
                "user/UserControl.js",
                "vlan/Vlan.js",
                "vlan/VlanControl.js"
            ]
        }
    },
    "debug": {
        "services": {
            "angular": {
                "html": false,
                "js": true,
                "package": false
            },
            "esp": {
                "compile": "esp compile"
            },
            "gzip": false,
            "js": {
                "minify": false,
                "usemin": false,
                "usemap": false
            },
            "html": false,
            "angular-html": false,
            "angular-package": false
        }
    },
    "release": {
        "services": {
            "angular": {
                "html": true,
                "js": true,
                "package": true,
                "scripts": [
                    "**.js",
                    "!lib/**.js",
                    "lib/angular*/**.js",
                    "lib/esp*/**.js",
                    "!**.min.js"
                ],
                "minify": true,
                "dotmin": true
            },
            "css": {
                "minify": true,
                "usemap": false,
                "usemin": true
            },
            "esp": {
                "compile": "appweb-esp compile"
            },
            "gzip": true,
            "js": {
                "minify": false,
                "usemin": false,
                "usemap": false
            }
        }
    }
}
