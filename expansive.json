{
    "meta": {
        "site": "https://embedthis.com/appweb/demo/"
    },
    "control": {
        "post": [
            "ng-package",
            "compile-esp",
            "compress"
        ],
        "deploy": {
            "from": [
                "dist/**",
                "db/*.*",
                "!db/*.bak",
                "cache/*.dylib",
                "cache/*.so",
                "cache/*.dll",
                "cache/*.lib",
                "esp.json",
                "package.json"
            ],
            "to": "deploy",
            "flatten": false,
            "clean": true,
            "script": ""
        },
        "render": {
            "js": [
                "main.js",
                "dash/Dash.js",
                "dash/DashControl.js",
                "demo/DemoControl.js",
                "event/Event.js",
                "event/EventControl.js",
                "home/HomeControl.js",
                "port/Port.js",
                "port/PortControl.js",
                "setting/Setting.js",
                "setting/SettingControl.js",
                "status/Status.js",
                "status/StatusControl.js",
                "table/Table.js",
                "table/TableControl.js",
                "user/User.js",
                "user/UserControl.js",
                "vlan/Vlan.js",
                "vlan/VlanControl.js"
            ]
        }
    },
    "debug": {
        "services": {
            "compress": false,
            "html": false,
            "js": {
                "minify": false,
                "usemin": false,
                "usemap": false
            },
            "ng-compile-html": false,
            "ng-package": false
        }
    },
    "release": {
        "services": {
            "compress": true,
            "css": {
                "minify": true,
                "usemap": false,
                "usemin": true
            },
            "js": {
                "minify": false,
                "usemin": false,
                "usemap": false
            },
            "ng-compile-js": {
                "files": [
                    "**.js",
                    "!lib/**.js",
                    "lib/angular*/**.js",
                    "lib/esp*/**.js"
                ]
            },
            "ng-package": {
                "minify": true,
                "dotmin": true
            }
        }
    }
}
